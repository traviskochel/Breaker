<header class='clearfix'>
  <div class="container color-reversed">
    <nav>
      <ul class='list-inline grid-8'>
        <li><%= link_to 'Breaker', root_url, class: 'logo'  %></li>
        
          <% if current_user %>
            <li><%= link_to 'Projects', projects_path %></li>
            <% if current_user.admin %>
              <li><%= link_to 'Users', users_path %></li>
            <% end %>
          <% end %>
      </ul>
    </nav>

    <ul class="signin list-inline grid-4 last text-right">
      <% if user_signed_in? %>
        <li><%= link_to current_user.name, edit_user_registration_path %></li>
        <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
      <% else %>
        <li><%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %></li>
        <li><%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %></li>
      <% end %>
    </ul>
  </div>
  <div class="breadcrumb-wrap clearfix">
    <%= breadcrumbs separator: " &rsaquo; ", class: 'container breadcrumbs' %>
  </div>
</header>