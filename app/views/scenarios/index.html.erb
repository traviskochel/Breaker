<h1>Listing scenarios</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Expected</th>
      <th>Notes</th>
      <th>Priority</th>
      <th>User</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scenarios.each do |scenario| %>
      <tr>
        <td><%= scenario.name %></td>
        <td><%= scenario.expected %></td>
        <td><%= scenario.notes %></td>
        <td><%= scenario.priority %></td>
        <td><%= scenario.user_id %></td>
        <td><%= scenario.group_id %></td>
        <td><%= link_to 'Show', scenario %></td>
        <td><%= link_to 'Edit', edit_scenario_path(scenario) %></td>
        <td><%= link_to 'Destroy', scenario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Scenario', new_scenario_path %>
