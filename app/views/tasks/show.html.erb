<% breadcrumb :task, @task %>

<div class="task-detail">

  <section>
    <div class="font-big"><%= render 'tasks/task', :task => @task %>
      </div> 
  </section>
  <section class="border">
    <h2>Comments</h2>

    <% if @comments.count > 0 %>
      <ul class='ruled'>
        <% @comments.each do |comment|  %>
          <li class='comment clearfix'>
            <div class="grid-3">
              <p>
                <strong><%= comment.user.name %></strong>  <br> 
                <em><%= time_ago_in_words(comment.created_at) %> ago</em> 
              </p>
            </div>
            <div class="grid-6 last">
              <%= comment.message %> 
            </div>
            

            </li>
        <% end %>
      </ul>
    <% end %>

    <%= render 'comments/form' %>
  </section>

</div>